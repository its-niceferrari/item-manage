<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="item_manage.MainWindow"
        Title="Item Manage"
        Width="600" Height="1000">
    
    <Grid RowDefinitions="Auto, Auto, *" Margin="10">
        
        <!-- Input for adding categories/items -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox x:Name="NewItemTextBox" Width="250" Watermark="Enter category or item"/>
            <Button Name="AddCategoryButton" Content="Add Category" Click="OnAddCategory"/>
            <Button Name="AddItemButton" Content="Add Item" Click="OnAddItem"/>
        </StackPanel>

        <!-- Dynamic TreeView -->
        <TreeView x:Name="FileTreeView" Grid.Row="2"/>
    </Grid>
</Window>
